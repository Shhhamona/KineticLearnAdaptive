{
  "experiment_name": "adaptive_vs_traditional_comparison",
  "description": "Comparison of adaptive sampling vs traditional approach for rate coefficient determination",
  
  "simulation": {
    "setup_file": "setup_O2_simple.in",
    "chem_file": "O2_simple_1.chem",
    "loki_path": "C:\\MyPrograms\\LoKI_v3.1.0-v2",
    "k_columns": [0, 1, 2],
    "true_k_values": [6e-16, 1.3e-15, 9.6e-16],
    "use_mock_simulator": true
  },
  
  "traditional_approach": {
    "n_train": 200,
    "n_test": 100,
    "sampling_method": "latin_hypercube",
    "models": [
      {
        "type": "random_forest",
        "params": {
          "n_estimators": 100,
          "max_depth": 10,
          "random_state": 42
