    "models": [
      {
        "type": "random_forest",
        "params": {
          "n_estimators": 100,
          "max_depth": 10,
          "random_state": 42
        }
      },
      {
        "type": "svm_multi",
        "params": {
          "C": 10.0,
          "epsilon": 0.1,
          "kernel": "rbf",
          "gamma": "scale"
        }
      }
    ]
  },
  
  "comparison": {
    "metrics": [
      "r2_score",
      "rmse", 
      "relative_error",
      "total_simulations",
      "training_time"
